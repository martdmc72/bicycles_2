<%= content_for :header do %>
<%= link_to 'Bicycles', bicycles_path %>

<% end %>
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
      <th>Wallet</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>

        <td>        
          <figure class="image is-96x96">
            <%= image_tag(user.image_url(:standard)) %>
        </figure></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.wallet %>$</td>
        <td><%= user.bio %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
